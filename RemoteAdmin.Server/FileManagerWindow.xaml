<Window x:Class="RemoteAdmin.Server.FileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Manager" Height="600" Width="1000"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <TextBlock x:Name="txtClientInfo" 
                       Text="File Manager: ComputerName" 
                       Foreground="White" 
                       FontWeight="Bold"/>
        </Border>

        <!-- Path Navigation -->
        <Border Grid.Row="1" Background="#3F3F46" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Path:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox x:Name="txtPath" 
                         Grid.Column="1"
                         Text="C:\"
                         Background="#555555"
                         Foreground="White"
                         BorderBrush="#666666"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         KeyDown="txtPath_KeyDown"/>

                <Button x:Name="btnUp" 
                        Grid.Column="2"
                        Content="⬆ Up"
                        Width="60"
                        Margin="10,0,0,0"
                        Click="btnUp_Click"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="5"
                        Cursor="Hand"/>

                <Button x:Name="btnRefresh" 
                        Grid.Column="3"
                        Content="🔄 Refresh"
                        Width="80"
                        Margin="10,0,0,0"
                        Click="btnRefresh_Click"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="5"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- File/Folder Lists -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Folders -->
            <Border Grid.Column="0" BorderBrush="#3F3F46" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Folders" 
                               Background="#2D2D30" 
                               Foreground="White" 
                               Padding="10" 
                               FontWeight="Bold"/>

                    <ListBox x:Name="lstFolders" 
                             Grid.Row="1"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderThickness="0"
                             MouseDoubleClick="lstFolders_MouseDoubleClick"
                             DisplayMemberPath="Name">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open" Click="OpenFolder_Click" FontWeight="Bold"/>
                                <Separator/>
                                <MenuItem Header="Delete" Click="Delete_Click"/>
                                <MenuItem Header="Rename" Click="Rename_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Files -->
            <Border Grid.Column="1" BorderBrush="#3F3F46" BorderThickness="1" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Files" 
                               Background="#2D2D30" 
                               Foreground="White" 
                               Padding="10" 
                               FontWeight="Bold"/>

                    <DataGrid x:Name="gridFiles" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="#1E1E1E"
                              Foreground="#1E1E1E"
                              RowBackground="#1E1E1E"
                              AlternatingRowBackground="#252526"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="*"/>
                            <DataGridTextColumn Header="Modified" Binding="{Binding LastModifiedFormatted}" Width="*"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Download" Click="Download_Click" FontWeight="Bold"/>
                                <Separator/>
                                <MenuItem Header="Delete" Click="Delete_Click"/>
                                <MenuItem Header="Rename" Click="Rename_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnUpload" 
                        Content="⬆ Upload File"
                        Width="120"
                        Margin="5"
                        Click="btnUpload_Click"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>

                <Button x:Name="btnDownload" 
                        Content="⬇ Download File"
                        Width="120"
                        Margin="5"
                        Click="Download_Click"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>

                <Button x:Name="btnNewFolder" 
                        Content="📁 New Folder"
                        Width="120"
                        Margin="5"
                        Click="btnNewFolder_Click"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>

                <Button x:Name="btnDelete" 
                        Content="🗑 Delete"
                        Width="100"
                        Margin="5"
                        Click="Delete_Click"
                        Background="#C42B1C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>

                <TextBlock x:Name="txtStatus" 
                           Text="Ready" 
                           Foreground="LimeGreen"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>