<Window x:Class="RemoteAdmin.Server.TaskCreateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Create Scheduled Task" 
        Height="700" 
        Width="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- ComboBoxItem (dropdown rows) -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Padding" Value="8,6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333842"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3A79C7"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Create New Scheduled Task" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Task Name -->
                <Label Content="Task Name *"/>
                <TextBox x:Name="txtName"/>

                <!-- Description -->
                <Label Content="Description"/>
                <TextBox x:Name="txtDescription" 
                         Height="60" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Program Path -->
                <Label Content="Program/Script Path *"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtProgramPath" Grid.Column="0" Margin="0"/>
                    <Button Grid.Column="1" 
                            Content="Browse..." 
                            Click="btnBrowse_Click"
                            Margin="10,0,0,0"
                            Padding="15,6"/>
                </Grid>

                <!-- Arguments -->
                <Label Content="Arguments (Optional)"/>
                <TextBox x:Name="txtArguments"/>

                <!-- Working Directory -->
                <Label Content="Working Directory (Optional)"/>
                <TextBox x:Name="txtWorkingDirectory"/>

                <!-- Trigger Type -->
                <Label Content="Trigger Type *"/>
                <ComboBox x:Name="cmbTriggerType"
                          SelectionChanged="cmbTriggerType_SelectionChanged"
                          ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}">
                    <!-- Make the popup/dropdown dark and readable -->
                    <ComboBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#2D2D30"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#FFFFFF"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3A79C7"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#2D2D30"/>
                    </ComboBox.Resources>

                    <ComboBoxItem Content="Daily" Tag="Daily"/>
                    <ComboBoxItem Content="Weekly" Tag="Weekly"/>
                    <ComboBoxItem Content="At System Startup" Tag="Boot"/>
                    <ComboBoxItem Content="At Logon" Tag="Logon"/>
                    <ComboBoxItem Content="One Time" Tag="Time" IsSelected="True"/>
                </ComboBox>

                <!-- Trigger Details Panel -->
                <StackPanel x:Name="panelTriggerDetails">
                    <!-- Start Date/Time -->
                    <Label Content="Start Date/Time"/>
                    <DatePicker x:Name="dpStartDate" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Hour:" Margin="0"/>
                        <TextBox x:Name="txtHour" Grid.Column="1" Text="12" Margin="10,0,20,0"/>
                        <Label Grid.Column="2" Content="Minute:" Margin="0"/>
                        <TextBox x:Name="txtMinute" Grid.Column="3" Text="00" Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>

                <!-- Security Options -->
                <TextBlock Text="Security Options" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="Bold" Margin="0,10,0,8"/>

                <Border Background="{StaticResource ControlBackground}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" Padding="12" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Label Content="Run as user:" Width="110" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtRunAsUser" Width="260" 
                                     Text="{x:Static sys:Environment.UserName}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <RadioButton x:Name="rbLoggedOn"
                                         Content="Run only when user is logged on"
                                         GroupName="logonMode"
                                         IsChecked="True"/>
                            <RadioButton x:Name="rbLoggedOff"
                                         Content="Run whether user is logged on or not"
                                         GroupName="logonMode"/>
                        </StackPanel>

                        <CheckBox x:Name="chkRunWithHighest" 
                                  Content="Run with highest privileges" 
                                  IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- Options -->
                <TextBlock Text="Options" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="Bold" Margin="0,0,0,8"/>
                <CheckBox x:Name="chkEnabled" Content="Enabled" IsChecked="True"/>
                <CheckBox x:Name="chkHidden" Content="Hidden"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Create" 
                    Click="btnCreate_Click"
                    Background="{StaticResource SuccessBrush}"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Click="btnCancel_Click"
                    Background="{StaticResource DangerBrush}"/>
        </StackPanel>
    </Grid>
</Window>
