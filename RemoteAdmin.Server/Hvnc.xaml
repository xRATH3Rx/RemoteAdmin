<Window x:Class="RemoteAdmin.Server.Hvnc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteAdmin.Server"
        mc:Ignorable="d"
        Title="Hidden VNC" Width="1924" Height="888" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="#F0F0F0">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryDarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryDarkBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="TertiaryBackground" Color="#3F3F46"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0E639C"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#A54ED5"/>
        <SolidColorBrush x:Key="LightForeground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="DangerRed" Color="#C42B1C"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#2ECC71"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Preview area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom controls -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDarkBackground}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Hidden VNC" 
                           FontWeight="Bold" 
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Browser:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="comboBox1" 
                              Width="140" 
                              VerticalAlignment="Center"
                              SelectionChanged="ComboBox1_SelectionChanged"
                              Background="{StaticResource PrimaryDarkBackground}"
                              Foreground="{StaticResource LightForeground}"/>

                    <CheckBox x:Name="checkBox1"
                              Content="Browser Clone Profile"
                              IsEnabled="False"
                              Checked="CheckBox1_CheckedChanged"
                              Unchecked="CheckBox1_CheckedChanged"
                              Foreground="{StaticResource LightForeground}"
                              Margin="15,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview Display (like PictureBox Zoom) -->
        <Border Grid.Row="1" 
                Background="Black" 
                BorderBrush="#555555" 
                BorderThickness="1">
            <Viewbox Stretch="Uniform">
                <Image x:Name="PreviewImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       MouseLeftButtonUp="PreviewImage_Click"/>
            </Viewbox>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryDarkBackground}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Start/Stop Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="button1" 
                            Content="▶ Start" 
                            Width="100" 
                            Height="35"
                            Click="Button1_Click"
                            Background="{StaticResource SuccessGreen}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Cursor="Hand"/>

                    <Button x:Name="button2" 
                            Content="⏹ Stop" 
                            Width="100" 
                            Height="35"
                            Click="Button2_Click"
                            Background="{StaticResource DangerRed}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Right Side - Application Launch Buttons (Scrollable) -->
                <ScrollViewer Grid.Column="1" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Margin="15,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="button3" 
                                Content="📁 Start Explorer" 
                                MinWidth="120"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button3_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button4" 
                                Content="▶ Run" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button4_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button5" 
                                Content="Edge" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button5_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button6" 
                                Content="Chrome" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button6_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button7" 
                                Content="Firefox" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button7_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button12" 
                                Content="Opera" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button12_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button11" 
                                Content="Opera GX" 
                                MinWidth="90"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button11_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button10" 
                                Content="Brave" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button10_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button8" 
                                Content="⌨ CMD" 
                                MinWidth="80"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="Button8_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>

                        <Button x:Name="button9" 
                                Content="⌨ PowerShell" 
                                MinWidth="110"
                                Height="35"
                                Margin="0,0,0,0"
                                Click="Button9_Click"
                                Background="{StaticResource AccentBlue}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Cursor="Hand"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
