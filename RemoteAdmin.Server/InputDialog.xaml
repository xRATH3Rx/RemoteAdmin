<Window x:Class="RemoteAdmin.Server.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtPrompt" Text="Enter value:" Margin="0,0,0,10"/>

        <TextBox Grid.Row="1" x:Name="txtInput" Padding="5" KeyDown="txtInput_KeyDown"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="btnOK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>