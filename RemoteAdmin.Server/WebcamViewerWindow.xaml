<Window x:Class="RemoteAdmin.Server.WebcamViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Viewer" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls Panel -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10" CornerRadius="4" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Camera:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1" x:Name="CameraComboBox" VerticalAlignment="Center" Margin="0,0,15,0"/>

                <TextBlock Grid.Column="2" Text="Resolution:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="3" x:Name="ResolutionComboBox" VerticalAlignment="Center" Margin="0,0,15,0">
                    <ComboBoxItem Content="320x240" Tag="320,240"/>
                    <ComboBoxItem Content="640x480" Tag="640,480" IsSelected="True"/>
                    <ComboBoxItem Content="800x600" Tag="800,600"/>
                    <ComboBoxItem Content="1280x720" Tag="1280,720"/>
                    <ComboBoxItem Content="1920x1080" Tag="1920,1080"/>
                </ComboBox>

                <TextBlock Grid.Column="4" Text="Quality:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="5" x:Name="QualityComboBox" VerticalAlignment="Center" Margin="0,0,15,0">
                    <ComboBoxItem Content="Low (50%)" Tag="50"/>
                    <ComboBoxItem Content="Medium (75%)" Tag="75" IsSelected="True"/>
                    <ComboBoxItem Content="High (90%)" Tag="90"/>
                    <ComboBoxItem Content="Maximum (100%)" Tag="100"/>
                </ComboBox>

                <Button Grid.Column="9" x:Name="StartButton" Content="â–¶ Start" Width="80" Height="30" 
                        Margin="0,0,10,0" Click="StartButton_Click"
                        Background="#0E7A0D" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
                
                <Button Grid.Column="10" x:Name="StopButton" Content="â¬› Stop" Width="80" Height="30" 
                        Click="StopButton_Click" IsEnabled="False"
                        Background="#A80000" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Video Display -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3F3F46" BorderThickness="2" CornerRadius="4">
            <Grid>
                <Image x:Name="WebcamImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Placeholder when not streaming -->
                <StackPanel x:Name="PlaceholderPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¹" FontSize="72" HorizontalAlignment="Center" Foreground="#6E6E6E"/>
                    <TextBlock Text="Webcam Not Active" FontSize="20" Foreground="#6E6E6E" Margin="0,10,0,0"/>
                    <TextBlock Text="Select a camera and click Start" FontSize="14" Foreground="#6E6E6E" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10" CornerRadius="4" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" Text="â— Ready" Foreground="#4EC9B0" 
                          VerticalAlignment="Center" FontWeight="Bold"/>

                <TextBlock Grid.Column="2" x:Name="ResolutionText" Text="Resolution: --" Foreground="#9CDCFE" 
                          VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="3" x:Name="FpsText" Text="FPS: --" Foreground="#9CDCFE" 
                          VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="4" x:Name="FrameCountText" Text="Frames: 0" Foreground="#9CDCFE" 
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
